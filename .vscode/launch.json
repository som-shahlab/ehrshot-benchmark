{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },

        {
            "name": "Python Debugger: Generate AGR Features",
            "type": "debugpy",
            "request": "launch",
            "justMyCode": false,
            "program": "${workspaceFolder}/ehrshot/4_generate_agr_features.py",
            "console": "integratedTerminal",
            "args": [
                "--path_to_database", "~/ehrshot-benchmark/EHRSHOT_ASSETS/femr/extract",
                "--path_to_labels_dir", "~/ehrshot-benchmark/EHRSHOT_ASSETS/benchmark",
                "--path_to_features_dir", "~/ehrshot-benchmark/EHRSHOT_ASSETS/features",
                "--num_threads", "20",
                "--is_force_refresh"
            ],

        },

        {
            "name": "Python Debugger: Generate LLM Features",
            "type": "debugpy",
            "request": "launch",
            "justMyCode": false,
            "program": "${workspaceFolder}/ehrshot/4_generate_llm_features.py",
            "console": "integratedTerminal",
            "args": [
                "--path_to_database", "~/ehrshot-benchmark/EHRSHOT_ASSETS/femr/extract",
                "--path_to_labels_dir", "~/ehrshot-benchmark/EHRSHOT_ASSETS/benchmark",
                "--path_to_features_dir", "~/ehrshot-benchmark/EHRSHOT_ASSETS/features",
                "--num_threads", "20",
                "--is_force_refresh"
            ],

        },

        {
            "name": "Python Debugger: 10_cis.py",
            "type": "debugpy",
            "request": "launch",
            "justMyCode": false,
            "program": "${workspaceFolder}/ehrshot/10_cis.py",
            "console": "integratedTerminal",
            "args": [
                "--path_to_results_dir", "~/ehrshot-benchmark/EHRSHOT_ASSETS/results"
            ], 
        }
    ]
}

